<h5>Students registered</h5>
<% if @camp_registrations.empty? %>
  <p>&nbsp;&nbsp;<em>None at this time</em></p>
  <p>&nbsp;</p>
  
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
  			<th>Rating</th>
  			<th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @camp_registrations.map { |reg| reg.student }.each do |student| %>
        <tr>
          <td><%= link_to student.name, student_path(student) %></td>
          <td class="centered"><%= student.rating  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>