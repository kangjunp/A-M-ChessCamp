<h5>Payment Report</h5>
<% if @camp_registrations.empty? %>
  <p>&nbsp;&nbsp;<em>None at this time</em></p>
  <p>&nbsp;</p>
  
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
  			<th>Payment Status</th>
  			<th>Money Received</th>
      </tr>
    </thead>
    <tbody>
      <% sum = 0%>
      <% @camp.registrations.each do |reg| %>
        <tr>
          <td><%= link_to reg.student.name, student_path(reg.student) %></td>
          <td class="centered"><%= reg.payment_status  %></td>
          <% if reg.payment_status == "full"%>
            <td class="centered"><%= "$ #{@camp.cost}"  %></td>
            <% sum = sum + @camp.cost %>
          <%elsif reg.payment_status == "deposit" %>
            <td class="centered"><%= "$ 50"  %></td>
            <% sum = sum + 50 %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br />

  <strong>Total Payment: <%= "$ #{sum}"%> </strong> 



<% end %>