<% if @student_registrations.empty? %>
  <p>&nbsp;&nbsp;<em>None at this time</em></p>
  <p>&nbsp;</p>
  
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Camp</th>
  			<th>Start Date</th>
  			<th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @student_registrations.each do |registration| %>
        <tr>
          <td><%= link_to registration.camp.curriculum.name, camp_path(registration.camp.id) %></td>
          <td class="centered"><%= registration.camp.start_date.strftime('%m/%d/%y')  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>